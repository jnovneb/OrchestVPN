
<div class="overflow-x-auto">
  <table class="table w-full">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Role</th>
        <th>Connect</th>
        <th>Settings</th>
        <% if current_user.admin %>
          <th>Monitoring</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @vpns.each do |vpn| %>
        <tr>
          <th><%= vpn[:id] %></th>
          <td><%= vpn[:name] %></td>
          <td><%= vpn[:description] %></td>
          <td><%= vpn[:role] %></td>
          <td><%= vpn[:connect] %></td>
          <td><%= vpn[:settings] %></td>
          <% if current_user.admin %>
            <td><%= vpn[:monitoring] %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
